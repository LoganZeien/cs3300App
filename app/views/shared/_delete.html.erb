<%= form_with(url: equipment_path(equipment), method: :delete, local: true, html: {class: "delete-form" }) do |form| %> <!-- A simple delete form, must type DELETE to delete --> 
    <%= form.label :confirmation, "Type 'DELETE' to delete:" %>
    <%= form.text_field :confirmation, required: true %>
    <%= form.submit 'Delete', class: "btn btn-danger p-1 m-1 border border-2 border-dark" %>
<% end %>