<div class="container mt-5 shadow p-4 bg-white rounded border border-1">
  <div class="row text-center mb-2">
    <h2>Resend unlock instructions</h2>
  </div>
  <div class="row d-flex align-items-center justify-content-center pb-5">
    <div class="col-5 m-3">
      <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/3/39/Children%27s_Hospital_Colorado_Colorado_Springs.JPG/800px-Children%27s_Hospital_Colorado_Colorado_Springs.JPG?20220929160406" class="img-fluid" alt="picture of children's hospital">
    </div>
    <div class="col-5 m-3">

      <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
      
        <div class="field">
          <%= f.label :email, class: "form-label"  %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"  %>
        </div>
      
        <div class="actions">
          <%= f.submit "Resend unlock instructions", class: "btn btn-primary mt-2 p-2"  %>
          <%= render "users/shared/links" %>
        </div>
      <% end %>
  
    </div>
  </div>
</div>
